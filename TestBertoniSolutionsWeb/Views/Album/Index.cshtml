@model IEnumerable<TestBertoniSolutionsWeb.Models.Album>
@{
    ViewData["Title"] = "Álbums";
}

<h1>Lista de Álbums</h1>

<div style="height:400px; overflow:auto;">
    <table class="table">
        <tr>
            <th>
                TITULO
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.ActionLink("Visualizar Álbum", "Index", "Photo", new { albumId = item.Id })
                </td>
            </tr>
        }
            <tr>
                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </td>
            </tr>

    </table>
</div>


